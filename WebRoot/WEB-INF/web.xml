<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.cn.sxt.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>com.cn.sxt.TestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.cn.sxt.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>imageCode</servlet-name>
  	<servlet-class>util.ImageValidate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserinfoServlet</servlet-name>
    <servlet-class>com.cn.sxt.UserinfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>deleteUserServlet</servlet-name>
    <servlet-class>com.cn.sxt.deleteUserServlet</servlet-class>
  </servlet>
   <servlet>
    <servlet-name>deleteNewsServlet</servlet-name>
    <servlet-class>com.cn.sxt.deleteNewsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>updateUserServlet</servlet-name>
    <servlet-class>com.cn.sxt.updateUserServlet</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>updateNewsServlet</servlet-name>
    <servlet-class>com.cn.sxt.updateUserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>addNewsServlet</servlet-name>
    <servlet-class>com.cn.sxt.addNewsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>showNewsServlet</servlet-name>
    <servlet-class>com.cn.sxt.showNewsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>showContentServlet</servlet-name>
    <servlet-class>com.cn.sxt.showContentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>com.cn.sxt.IndexServlet</servlet-class>
  </servlet>
 <servlet>
    <servlet-name>showNewsByTypeServlet</servlet-name>
    <servlet-class>com.cn.sxt.showNewsByTypeServlet</servlet-class>
  </servlet>



  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/test.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>imageCode</servlet-name>
  	<url-pattern>/imageCode.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserinfoServlet</servlet-name>
    <url-pattern>/userinfo.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>deleteUserServlet</servlet-name>
    <url-pattern>/deleteUser.do</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>deleteNewsServlet</servlet-name>
    <url-pattern>/deleteNews.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateUserServlet</servlet-name>
    <url-pattern>/updateUser.do</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>updateNewsServlet</servlet-name>
    <url-pattern>/updateNews.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addNewsServlet</servlet-name>
    <url-pattern>/addNews.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>showNewsServlet</servlet-name>
    <url-pattern>/showNews.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>showContentServlet</servlet-name>
    <url-pattern>/showContent.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>showNewsByTypeServlet</servlet-name>
    <url-pattern>/showNewsByType.do</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
